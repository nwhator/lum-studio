# Environment Variables Template for LUM Studios
# Copy this file to .env.local and fill in your values

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://thelumstudios.com
NEXT_PUBLIC_BASE_URL=https://thelumstudios.com

# ===========================================
# EMAIL SERVICE (Choose one)
# ===========================================
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=bookings@thelumstudios.com
EMAIL_FROM_NAME=LUM Studios
ADMIN_EMAIL=admin@thelumstudios.com

# ===========================================
# DATABASE (Choose one)
# ===========================================
# Vercel Postgres
POSTGRES_URL=your_postgres_connection_string

# OR MongoDB
# MONGODB_URI=your_mongodb_connection_string

# OR Supabase
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_key

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# ===========================================
# OPTIONAL SERVICES
# ===========================================
# Payment (Paystack for Nigerian payments)
# PAYSTACK_PUBLIC_KEY=
# PAYSTACK_SECRET_KEY=

# SMS Notifications
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
